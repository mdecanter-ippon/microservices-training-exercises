{
  "realm": "dornach",
  "enabled": true,
  "displayName": "Dornach Microservices",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>Dornach</span></div>",
  "accessTokenLifespan": 3600,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "realm": [
      {
        "name": "user",
