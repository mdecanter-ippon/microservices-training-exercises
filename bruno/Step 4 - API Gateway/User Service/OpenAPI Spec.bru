  });

  test("OpenAPI spec is valid (skipped if not gateway)", function() {
    if (isGatewayEnv) {
      const body = res.getBody();
      expect(body.openapi).to.equal("3.1.0");
      expect(body.info.title).to.equal("Dornach User Service API");
    }
  });

  test("Has /users paths (skipped if not gateway)", function() {
    if (isGatewayEnv) {
      const body = res.getBody();
      expect(body.paths).to.have.property("/users");
      expect(body.paths).to.have.property("/users/{id}");
    }
  });
